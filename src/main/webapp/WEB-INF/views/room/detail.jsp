    <script>
        let currentRoom = null;
        let currentGuests = 1;
        let maxGuests = 1;
        
        // Ëé∑ÂèñÊàøÊ∫êID
        const pathParts = window.location.pathname.split('/');
        const roomId = pathParts[pathParts.length - 1];
        
        // È°µÈù¢Âä†ËΩΩÊó∂ÂàùÂßãÂåñ
        document.addEventListener('DOMContentLoaded', function() {
            loadRoomDetail();
            initializeDateInputs();
            initializeGuestsControls();
            initializeFormValidation();
        });
        
        // Âä†ËΩΩÊàøÊ∫êËØ¶ÊÉÖ
        async function loadRoomDetail() {
            try {
                const response = await fetch('<%= request.getContextPath() %>/room/detail/' + roomId + '/api');
                const data = await response.json();
                
                if (data.code === 200) {
                    currentRoom = data.data;
                    displayRoomDetail(currentRoom);
                } else {
                    showMessage('ÊàøÊ∫ê‰ø°ÊÅØÂä†ËΩΩÂ§±Ë¥•Ôºö' + data.message, 'error');
                }
            } catch (error) {
                console.error('Âä†ËΩΩÊàøÊ∫êËØ¶ÊÉÖÂ§±Ë¥•:', error);
                showMessage('ÁΩëÁªúÈîôËØØÔºåËØ∑Á®çÂêéÈáçËØï', 'error');
            }
        }
        
        // ÊòæÁ§∫ÊàøÊ∫êËØ¶ÊÉÖ
        function displayRoomDetail(room) {
            document.getElementById('roomTitle').textContent = room.roomName || 'Êú™ÂëΩÂêçÊàøÊ∫ê';
            document.getElementById('roomLocation').innerHTML = 'üìç <span>' + (room.city || '') + (room.district ? ' ¬∑ ' + room.district : '') + '</span>';
            document.getElementById('roomDescription').textContent = room.description || 'ÊöÇÊó†ÊèèËø∞';
            document.getElementById('pricePerNight').textContent = room.pricePerNight || 0;

            // ËÆæÁΩÆÊúÄÂ§ß‰∫∫Êï∞Âπ∂Êõ¥Êñ∞ÊåâÈíÆÁä∂ÊÄÅ
            maxGuests = room.maxGuests || 1;
            console.log('ËÆæÁΩÆÊúÄÂ§ß‰∫∫Êï∞:', maxGuests);

            // ÈáçÊñ∞ÂàùÂßãÂåñ‰∫∫Êï∞ÊéßÂà∂
            updateGuestsButtons();

            // ÊòæÁ§∫ÊàøÊ∫êÂõæÁâá
            displayRoomImages(room.images);
            
            // ÊòæÁ§∫ÊàøÊ∫êÁâπÊÄß
            const featuresContainer = document.getElementById('roomFeatures');
            featuresContainer.innerHTML =
                '<div class="feature-item">' +
                    '<span class="feature-icon">üè†</span>' +
                    '<div>' +
                        '<div><strong>' + (room.roomType || 'Êú™Áü•ÊàøÂûã') + '</strong></div>' +
                        '<div class="feature-text">ÊàøÂûã</div>' +
                    '</div>' +
                '</div>' +
                '<div class="feature-item">' +
                    '<span class="feature-icon">üë•</span>' +
                    '<div>' +
                        '<div><strong>ÊúÄÂ§ö' + (room.maxGuests != null ? room.maxGuests : 0) + '‰∫∫</strong></div>' +
                        '<div class="feature-text">ÂÖ•‰Ωè‰∫∫Êï∞</div>' +
                    '</div>' +
                '</div>' +
                '<div class="feature-item">' +
                    '<span class="feature-icon">üí∞</span>' +
                    '<div>' +
                        '<div><strong>¬•' + (room.pricePerNight != null ? room.pricePerNight : 0) + '</strong></div>' +
                        '<div class="feature-text">ÊØèÊôö‰ª∑Ê†º</div>' +
                    '</div>' +
                '</div>' +
                '<div class="feature-item">' +
                    '<span class="feature-icon">üìç</span>' +
                    '<div>' +
                        '<div><strong>' + (room.address || 'Âú∞ÂùÄÊú™Áü•') + '</strong></div>' +
                        '<div class="feature-text">ËØ¶ÁªÜÂú∞ÂùÄ</div>' +
                    '</div>' +
                '</div>';
        }

        // ÊòæÁ§∫ÊàøÊ∫êÂõæÁâá
        function displayRoomImages(images) {
            const gallery = document.querySelector('.room-gallery');

            if (!images || images.length === 0) {
                gallery.innerHTML = 'üè†';
                return;
            }

            // ÂàõÂª∫ÂõæÁâáËΩÆÊí≠
            let currentImageIndex = 0;

            function updateGallery() {
                const image = images[currentImageIndex];
                gallery.innerHTML =
                    '<img src="' + image.imageUrl + '" alt="' + (image.imageName || 'ÊàøÊ∫êÂõæÁâá') + '" ' +
                    'style="width: 100%; height: 100%; object-fit: cover; position: relative; z-index: 1;" ' +
                    'onerror="this.style.display=\'none\'; this.parentNode.innerHTML=\'üè†\';">' +
                    (images.length > 1 ?
                        '<div style="position: absolute; bottom: 10px; right: 10px; background: rgba(0,0,0,0.7); color: white; padding: 5px 10px; border-radius: 15px; font-size: 12px; z-index: 2;">' +
                            (currentImageIndex + 1) + ' / ' + images.length +
                        '</div>' +
                        '<button onclick="previousImage()" style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%); background: rgba(0,0,0,0.5); color: white; border: none; border-radius: 50%; width: 40px; height: 40px; cursor: pointer; z-index: 2;">‚Äπ</button>' +
                        '<button onclick="nextImage()" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: rgba(0,0,0,0.5); color: white; border: none; border-radius: 50%; width: 40px; height: 40px; cursor: pointer; z-index: 2;">‚Ä∫</button>'
                        : ''
                    );
            }

            window.nextImage = function() {
                currentImageIndex = (currentImageIndex + 1) % images.length;
                updateGallery();
            };

            window.previousImage = function() {
                currentImageIndex = (currentImageIndex - 1 + images.length) % images.length;
                updateGallery();
            };

            updateGallery();

            // Ëá™Âä®ËΩÆÊí≠ÔºàÂ¶ÇÊûúÊúâÂ§öÂº†ÂõæÁâáÔºâ
            if (images.length > 1) {
                setInterval(() => {
                    window.nextImage();
                }, 5000);
            }
        }

        // ÂàùÂßãÂåñÊó•ÊúüËæìÂÖ•
        function initializeDateInputs() {
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);
            
